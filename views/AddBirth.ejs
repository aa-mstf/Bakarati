<%- include('partials/header'); -%>

<div>
  <form action="/api/AddBirth">
    <label for="date">Date:</label>

    <input type="date" id="date" name="date-of-addition"
           value="2023-01-30"
           min="2018-01-01" max="2023-12-31">

    <label for="amount">Mother ID:</label>
    <input type="number" id="motherID" name="mother id"
           value=0>
  
    <button>Add new Cow</button>
  </form>
</div>


<%- include('partials/footer'); -%>

<script>
  const form= document.querySelector('form');
  const date = document.querySelector('#date');
  const motherID=document.querySelector('#motherID');

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    const cow={
      "date":date.value,
      "motherID":motherID.value
    }
    console.log(cow)
    try {
      const res = await fetch('/api/AddBirth', { 
        method: 'POST', 
        body: JSON.stringify(cow),
        headers: {'Content-Type': 'application/json'}
      });
      location.assign("/birthPage")}
      catch (err) {
      console.log(err);
    }

  });
</script>